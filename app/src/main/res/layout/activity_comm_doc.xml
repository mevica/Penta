<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:imageview="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".CommDoc">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:orientation="horizontal"></LinearLayout>

    <LinearLayout
        android:layout_width="292dp"
        android:layout_height="257dp"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/docimg2"
            android:layout_width="188dp"
            android:layout_height="11dp"
            android:layout_gravity="center" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="123dp"
            imageview:srcCompat="@drawable/doc" />

        <TextView
            android:id="@+id/namedoc2"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:text="Name"
            android:textAlignment="center"
            android:textColor="#040303"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Dr.Mercy"
            android:textAlignment="center"
            android:textColor="#030303"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="186dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="183dp"
                android:layout_height="25dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Specialization:" />

                <TextView
                    android:id="@+id/textView23"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Dentist" />

                <TextView
                    android:id="@+id/tvspecial2"
                    android:layout_width="5dp"
                    android:layout_height="wrap_content"
                    android:text="   TextView" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="181dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="85dp"
                    android:layout_height="match_parent"
                    android:text="Expirience" />

                <TextView
                    android:id="@+id/textView24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=" :5 Years" />

                <TextView
                    android:id="@+id/tvexpirience2"
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:text="TextView" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="182dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="85dp"
                    android:layout_height="match_parent"
                    android:text="Location" />

                <TextView
                    android:id="@+id/textView25"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=" :Juja" />

                <TextView
                    android:id="@+id/tvlocation2"
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:text="TextView" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Appointment fee: " />

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ksh 1200/="
                    android:textColor="#44AA48" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="93dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            imageview:srcCompat="@drawable/dent" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            imageview:srcCompat="@drawable/dent1" />

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            imageview:srcCompat="@drawable/dent2" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/blue"
        android:orientation="vertical"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"

        android:orientation="vertical"></LinearLayout>

    <LinearLayout
        android:layout_width="332dp"
        android:layout_height="128dp"
        android:layout_gravity="center"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="204dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="52dp"

                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:text="Chat"
                    android:textColor="#040303"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/imageView13"
                    android:layout_width="62dp"
                    android:layout_height="40dp"
                    imageview:srcCompat="@drawable/ic_message"
                    tools:ignore="VectorDrawableCompat" />

                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:text="Call"
                    android:textColor="#070707"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/imageView14"
                    android:layout_width="54dp"
                    android:layout_height="39dp"
                    imageview:srcCompat="@drawable/ic_call"
                    tools:ignore="VectorDrawableCompat" />

            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:background="@color/darkblue"
            android:text="Book an appointment" />
    </LinearLayout>

</LinearLayout>